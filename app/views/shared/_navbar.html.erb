
<%= link_to "Blog", root_path, class: "navbar-brand" %>

<div class="d-flex" role="search">
  <%= link_to "Add Post", new_blog_post_path, class: "btn btn-outline-info me-2" %>
  <% if user_signed_in? %>
    <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
  <% else %>
    <%= link_to "Log In", new_user_session_path, class: "btn btn-outline-success" %>
  <% end %>
</div>